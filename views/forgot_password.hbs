<form class="form-horizontal text-left" role="form" method="post" action="">
         <h2><i class="icon-user color"></i> Reset your password</h2>
         <hr />

      {{#if not_found}}
          <div class="block-content collapse in">
              <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <h4>Error</h4>
                  Username or email not found.
              </div>
          </div>
      {{/if}}

      {{#if not_activated }}
          <div class="block-content collapse in">
              <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <h4>Error</h4>
                  Your account is not active. This means you either haven't
                  verified your email, or you have been banned. Please
                  contact the site administrator.
              </div>
          </div>
      {{/if}}

      {{#if failed_email }}
          <div class="block-content collapse in">
              <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <h4>Error</h4>
                  Unable to send e-mail. Please contact the site administrator.
              </div>
          </div>
      {{/if}}

      {{#if wrong_captcha }}
          <div class="block-content collapse in">
              <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <h4>Error</h4>
                  Wrong captcha code. Please try again.
              </div>
          </div>
      {{/if}}

      {{#if sent}}
          <div class="block-content collapse in">
              <div class="alert alert-success">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <h4>Done!</h4>
                  Check your inbox and follow the steps there to choose a new password.
              </div>
          </div>
      {{/if}}

    <div class="form-group">
      <label class="control-label">Username or email</label>
      <input type="text" class="form-control" name="username" placeholder="Username or email" value="{{ username }}" required>
    </div>

     {{#if settings.captcha_enabled}}
     <div class="form-group">
        <label class="control-label"> <img src="/captcha/image/{{ session.secret }}.png" /> </label>
        <input type="text" name="secret" class="form-control small" placeholder="CODE" required maxlength="5 "/>
     </div>
     {{/if}}

    <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
        <a href="/" type="button" class="btn btn-danger">Cancel</a>
    </div>
</form>
