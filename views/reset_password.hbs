<form class="form-horizontal" role="form" method="post" action="{{ uri_for '/reset-password' }}">
     <h2><i class="icon-user color"></i> Reset your password</h2>
     <hr />

      {{#if no_match }}
          <div class="block-content collapse in">
              <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <h4>Error</h4>
                  Passwords don't match.
              </div>
          </div>
      {{/if}}

      {{#if empty_password }}
          <div class="block-content collapse in">
              <div class="alert alert-danger">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <h4>Error</h4>
                  Password can't be empty.
              </div>
          </div>
      {{/if}}

      {{#if done }}
          <div class="block-content collapse in">
              <div class="alert alert-success">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  <h4>Done!</h4>
                  Your password has been successfully updated.
              </div>
          </div>
      {{/if}}


    <div class="form-group">
      <label class="control-label">New password</label>
        <input type="password" class="form-control" name="password" placeholder="Confirm password">
    </div>
    <div class="form-group">
      <label class="control-label">Confirm password</label>
        <input type="password" class="form-control" name="confirm_password" placeholder="Confirm password">
    </div>
    <input type="hidden" name="token" value="{{ token }}">
    <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>
