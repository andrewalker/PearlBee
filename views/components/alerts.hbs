{{#if error}}
    <div class="alert alert-error">
        <h4>Error</h4>
        {{error}}
    </div>
{{/if}}

{{#if warning}}
    <div class="alert alert-warning">
        <h4>Warning</h4>
        {{warning}}
    </div>
{{/if}}

{{#if info}}
    <div class="alert alert-info">
        <h4>Info</h4>
        {{info}}
    </div>
{{/if}}

{{#if success}}
    <div class="alert alert-success">
        <h4>Success</h4>
        {{success}}
    </div>
{{/if}}
