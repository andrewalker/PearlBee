#!/usr/bin/env perl
use strict;
use warnings;
use FindBin '$Bin';
use lib "$Bin/../lib";
use PearlBee::Model::Schema;

my ($dsn, $user, $password) = @ARGV;

my $schema = PearlBee::Model::Schema->connect($dsn, $user, $password);

my $admin = $schema->resultset('User')->create({
    first_name     => 'Default',
    last_name      => 'Admin',
    username       => 'admin',
    password       => 'password',
    email          => 'admin@admin.com',
    role           => 'admin',
    status         => 'activated',
});

$admin->create_related(
    categories => {
        name => 'Uncategorized',
        slug => 'uncategorized',
    }
);
